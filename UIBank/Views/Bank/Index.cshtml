@model List<Entities.Bank>
@{
    ViewBag.Title = "Список банков";
}

<h1>@ViewBag.Title</h1>
<br/>
    @Html.ActionLink("Добавить Банк", "AddBank", "Bank", null ,new { @class = "btn btn-default" })
<br/><br/>
<table class="table" style="width:50%; font-size:1.5em">
    <thead>
        <tr>
            <th>Название банка</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a style="padding:5px" href="@Url.Action("DeleteBank", "Bank", new { @id = @item.Id})">Удалить</a>
                        <a style="padding:5px" href="@Url.Action("EditBank", "Bank", new { @id = @item.Id})">Изменить</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

