@model Entities.Client
@{
    ViewBag.Title = "Редактирование клиента";
}
<script language="javascript">
    $(document).ready(function () {
        $('#datepicker').datepicker();
    });
</script>
@{var idBank = ViewBag.IdBank;}
<div class="title">
    <h2>@ViewBag.Title</h2>
</div>
<br />
@using (Html.BeginForm()) {
    <div class="row">
        <div class="span12">
            @Html.ValidationSummary(true)
        </div>
    </div>
    <input type="hidden" name="idBank" value="@idBank" />
    @Html.HiddenFor(model => model.Id);
    <div class="row">
        <div class="span4 control-group">
            <div>@Html.LabelFor(model => model.LastName)</div>
            <div>@Html.TextBoxFor(model =>model.LastName)</div>
        </div>
    </div>
    <div class="row">
        <div class="span4 control-group">
            <div>@Html.LabelFor(model => model.FirstName)</div>
            <div>@Html.TextBoxFor(model =>model.FirstName)</div>
        </div>
    </div>
    <div class="row">
        <div class="span4 control-group">
            <div>@Html.LabelFor(model => model.MiddleName)</div>
            <div>@Html.TextBoxFor(model =>model.MiddleName)</div>
        </div>
    </div>
        <div class="row">
        <div class="span4 control-group">
            <div>@Html.LabelFor(model => model.BirthDay)</div>
            <div>
                <input type="date" id="BirthDay" name="BirthDay" class="form-control" style="width: 200px" />
            </div>
        </div>
    </div>
    
    <br/>
    <div class="row">
        <div class="span12 control-group">
            <button class="btn btn-primary" type="submit">Сохранить</button>
            @Html.ActionLink("Назад", "EditBank", "Bank", new { id = new Guid(idBank)}, new {@class= "btn btn-warning"})
        </div>
    </div>
}

